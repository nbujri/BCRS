{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "BCRS API"
  },
  "basePath": "/",
  "tags": [
    {
      "name": "Users"
    },
    {
      "name": "Security"
    }
  ],
  "paths": {
    "/api/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "createUser",
        "description": "Create a new user",
        "operationId": "createUser",
        "requestBody": {
          "description": "User account details",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "isDisabled": {
                    "type": "boolean"
                  },
                  "role": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}
